<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rdb.refresh.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewActivity" />
        <activity android:name=".ScrollActivity" />
        <activity android:name=".RefreshListActivity" />
        <activity android:name=".RefreshListPageActivity" />
        <activity android:name=".RefreshGridActivity" />
        <activity android:name=".RefreshGridPageActivity" />
        <activity android:name=".RefreshRecyclerActivity" />
        <activity android:name=".RefreshRecyclerPageActivity" />
        <activity android:name=".RefreshExpandableListActivity" />
        <activity android:name=".RefreshExpandableListPageActivity" />
    </application>

</manifest>